<div class="container mt-4">
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-start flex-wrap">
        <div class="mb-3 mb-md-0">
          <h1 class="h2 mb-3"><%= @walk.name %></h1>
          <div class="d-flex flex-column gap-2">
            <div>
              <i class="fas fa-calendar-alt me-2"></i>
              <%= @walk.date.strftime("%d/%m/%Y %H:%M") %>
            </div>
            <div>
              <i class="fas fa-map-marker-alt me-2"></i>
              <%= @walk.address %>
            </div>
            <div>
              <i class="fas fa-users me-2"></i>
              <%= pluralize(@participants.count, 'participant') %>
            </div>
            <div class="mt-2">
              <% if @walk.validated? %>
                <span class="badge bg-success">ValidÃ©e</span>
              <% else %>
                <span class="badge bg-warning">En attente</span>
              <% end %>
            </div>
          </div>
        </div>

        <div class="d-flex flex-column gap-2">
          <%= link_to admin_walks_path, class: "btn btn-outline-secondary" do %>
            <i class="fas fa-arrow-left me-2"></i>Retour
          <% end %>

          <% unless @walk.validated? %>
            <%= button_to validate_admin_walk_path(@walk), method: :post, class: "btn btn-success" do %>
              <i class="fas fa-check me-2"></i>Valider
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <h2 class="h3 mb-4">Participants</h2>

  <div class="row g-3">
    <% @participants.each do |participant| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title d-flex align-items-center gap-2">
              <i class="fas fa-user"></i>
              <%= participant.first_name %> <%= participant.last_name %>
            </h5>

            <div class="card-text">
              <div class="mb-2">
                <i class="fas fa-envelope me-2"></i>
                <%= participant.email %>
              </div>

              <% if participant.dog %>
                <div>
                  <i class="fas fa-dog me-2"></i>
                  <%= participant.dog.name %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% content_for :head do %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<% end %>