<div class="container pb-8 mt-4 mx-auto px-4">
  <div class="flex flex-col sm:flex-row justify-between items-center mb-4 gap-4">
    <h1 class="text-2xl font-bold text-center"><%= @walk.name %></h1>
    <div class="w-full sm:w-auto">
      <%= link_to admin_walks_path, class: "btn btn-primary w-full sm:w-auto" do %>
        <i class="fas fa-arrow-left me-2"></i>Retour
      <% end %>
    </div>
  </div>

  <div class="row g-3">
    <% @participants.each do |user_walk| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title d-flex align-items-center gap-2">
              <i class="fas fa-user"></i>
              <%= user_walk.user.first_name %> <%= user_walk.user.last_name %>
            </h5>

            <div class="card-text">
              <div class="mb-2">
                <i class="fas fa-envelope me-2"></i>
                <%= user_walk.user.email %>
              </div>

              <% if user_walk.user.dog %>
                <div>
                  <i class="fas fa-dog me-2"></i>
                  <%= user_walk.user.dog.name %>
                </div>
              <% else %>
                <span class="text-gray-400">Aucun chien</span>
              <% end %>
            </div>

            <div class="mt-3">
              <div class="d-flex align-items-center gap-2">
                <div id="participant_status_<%= user_walk.id %>">
                  <%= render "participant_status", user_walk: user_walk, walk: @walk %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% content_for :head do %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<% end %>