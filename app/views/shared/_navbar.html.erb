<div class="navbar border-b-2 border-amber-500">
  <div class="flex-1 justify-between ">
    <%= link_to "DH Balades", root_path, class: "btn btn-ghost text-xl font-luckiest tracking-wide" %>
    <% if current_user&.admin? %>
      <%= link_to admin_walks_path, class: "btn btn-ghost text-lg relative mr-4" do %>
        <%= image_tag "shield.png", class: "w-5 h-5" %>
        <% if pending_walks_count > 0 %>
          <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">
            <%= pending_walks_count %>
          </span>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="flex-none gap-2">
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
        <div class="w-10 rounded-full">

          <%= image_tag "logo.png", class: "w-10 rounded-full" %>
        </div>
      </div>
      <ul
        tabindex="0"
        class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow"
      >
        <li>
          <%= link_to "Profil", profil_path  %>
        </li>
        <li><%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete } %></li>
      </ul>
    </div>
  </div>
</div>