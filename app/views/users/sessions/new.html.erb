<section class="flex flex-col items-center justify-center min-h-screen py-16">
  <div class="mx-auto">
    <h1 class=" text-amber-500 text-center text-4xl my-10 font-luckiest bg tracking-wider">
      Dog Harmonie Balades 
    </h1>
  </div>

  <div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs flex flex-col gap-3">
        <div
          class="input input-bordered bg-transparent flex items-center gap-2"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            fill="currentColor"
            class="h-4 w-4 opacity-70"
          >
            <path
              d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z"
            />
            <path
              d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z"
            />
          </svg>
          <%=
            f.input :email,
                    required: false,
                    autofocus: false,
                    label: false,
                    wrapper_html: {
                      class: 'grow bg-transparent text-amber-700',
                    },
                    input_html: {
                      autocomplete: 'email',
                      class: 'w-full bg-transparent outline-none border-none',
                      placeholder: 'Email',
                    }
          %>
        </div>

        <div
          class="input input-bordered bg-transparent flex items-center gap-2"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            fill="currentColor"
            class="h-4 w-4 opacity-70"
          >
            <path
              fill-rule="evenodd"
              d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
              clip-rule="evenodd"
            />
          </svg>
          <%=
            f.input :password,
                    required: false,
                    label: false,
                    wrapper_html: {
                      class: 'grow bg-transparent text-amber-700',
                    },
                    input_html: {
                      autocomplete: 'current-password',
                      class: 'w-full bg-transparent outline-none border-none',
                      placeholder: 'Password',
                    }
          %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center space-x-2 ">
            <%=
              f.input :remember_me,
                      as: :boolean,
                      label_html: { class: "!text-stone-400 " },
                      wrapper_html: {
                        class: 'bg-transparent',
                      },
                      input_html: {
                        class: 'bg-transparent border !border-amber-500/50 checked:!bg-amber-500 checked:!border-amber-500 focus:ring-amber-500 ml-3',
                      }
            %>
          </div>
        <% end %>
      </div>

      <div class="form-actions flex justify-center my-4">
        <%= f.button :submit, 'Se connecter', class: 'btn btn-primary' %>
      </div>
    <% end %>

    <div class="flex items-center justify-center gap-2">
      <%= render 'users/shared/links' %>
    </div>
  </div>
</section>


