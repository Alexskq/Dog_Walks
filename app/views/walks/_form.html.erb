<%= simple_form_for walk, html: { class: "flex flex-col items-center gap-12" }, data: { controller: "flatpickr"} do |f| %>
  <%=
    f.input :name,
            label: 'Nom de la balade',
            label_html: { class: 'text-[#db924b]' },
            input_html: {
              placeholder: 'Ex: Balade en forêt de Raismes',
              class:"!bg-transparent/20 mt-2"
            },
            class: 'py-2 '
  %>
  <%=
    f.input :description,
            label: 'Description de la balade',
            label_html: { class: 'text-[#db924b]' },
            input_html: {
              placeholder: "Ex: Bol d'air frais",
              class:"!bg-transparent/20 mt-2"
            }
  %>
  <%=
    f.input :date,
            as: :string,
            input_html: {
              class: 'datepicker !bg-transparent/20 mt-2',
              
            },
            label: 'Date et heure',
            label_html: { class: 'text-[#db924b]' },
            required: true
  %>

  <!--
      <%=
  f.input :time,
          as: :string,
          label: 'Heure de la balade',
          input_html: {
            class: 'timepicker',
          }
%>
      -->
  <%= f.input :location, 
              label: 'Lieu',
              label_html: { class: 'text-[#db924b]' },
              input_html: {
                class:"!bg-transparent/20 mt-2",
                placeholder: 'Ex: Parc de la Rhônelle',
              } %>
  <%=
    f.input :number_of_dog,
            label: 'Nombre de chiens maximum',
            label_html: { class: 'text-[#db924b]' },
            input_html: {
              class:"!bg-transparent/20 mt-2",
              min: 1,
              max: 6,
              type: 'number',
              placeholder: 'max : 6',
            }
  %>
  <%= f.button :submit, 'Créer la balade', class: 'btn btn-primary' %>
<% end %>
