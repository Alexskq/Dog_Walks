<%= simple_form_for walk, html: { class: "flex flex-col items-center gap-12" }, data: { controller: "flatpickr"} do |f| %>
  <%=
    f.input :name,
            label: 'Titre de la balade',
            input_html: {
              placeholder: 'Ex: Balade en forêt de Raismes',
            },
            class: 'py-2'
  %>
  <%=
    f.input :description,
            label: 'Description de la balade',
            input_html: {
              placeholder: "Ex: Bol d'air frais",
            }
  %>
  <%=
    f.input :date,
            as: :string,
            input_html: {
              class: 'datepicker',
            },
            label: 'Date et heure de la balade',
            required: true
  %>

  <!--
      <%=
  f.input :time,
          as: :string,
          label: 'Heure de la balade',
          input_html: {
            class: 'timepicker',
          }
%>
      -->
  <%= f.input :location, label: 'Lieu de la balade' %>
  <%=
    f.input :number_of_dog,
            label: 'Nombre de chiens maximum',
            input_html: {
              min: 1,
              max: 6,
              type: 'number',
              placeholder: 'Ex : 5',
            }
  %>
  <%= f.button :submit, 'Créer la balade', class: 'btn btn-primary' %>
<% end %>
